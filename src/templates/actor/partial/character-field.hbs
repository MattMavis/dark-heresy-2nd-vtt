<div class="dh-header__item-wrapper--{{cleanFieldName key}}">
    <span class="dh-header__title">{{capitalize key}}</span>
    {{#if options}}
        <select class="dh-header__select" name="data.bio.{{key}}">
            {{selectOptions (arrayToObject options) selected=this.value}}
        </select>
    {{else}}
        <input class="dh-header__input" name="data.bio.{{key}}" type="text" value="{{this.value}}"/>
    {{/if}}
</div>
