<div class="dh-panel dh-grid-col-2 dh-grid-row-2">
    <div class="dh-skilltable--border">
        <h1 class="dh-panel__header">Basic Skills</h1>
        <div class="table-row--head">
            <div class="table-cell">Name</div>
            <div class="table-cell">Adv.</div>
            <div class="table-cell">Char.</div>
            <div class="table-cell--last">Total</div>
        </div>
        {{#each data.skills as | skill name |}}
            {{#unless skill.isSpecialist}}
                {{> systems/dark-heresy-2nd/templates/actor/partial/skill.hbs key=name}}
            {{/unless}}
        {{/each}}
    </div>
</div>
