<div class="dh-panel spacer dh-grid-col-2 dh-grid-row-1">
    <h1 class="dh-panel__header">Wounds</h1>
    <div class="dh-field__wrapper">
        <span class="dh-field__header">Max</span>
        <input type="number" data-dtype="Number" class="dh-field__input" name="system.wounds.max" value="{{actor.wounds.max}}" />
    </div>
    <div class="dh-field__wrapper">
        <span class="dh-field__header">Value</span>
        <input type="number" data-dtype="Number" class="dh-field__input" name="system.wounds.value" value="{{actor.wounds.value}}" />
    </div>
    <div class="dh-field__wrapper">
        <span class="dh-field__header">Critical</span>
        <input type="number" data-dtype="Number" class="dh-field__input" name="system.wounds.critical" value="{{actor.wounds.critical}}" />
    </div>
</div>
